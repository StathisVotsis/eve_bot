<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro" />

   <material name="white">
     <color rgba="1 1 1 1"/>
   </material>
   <material name="green">
     <color rgba="0 1 0 1"/>
   </material>
   <material name="gray">
     <color rgba="0.5 0.5 0.5 1"/>
   </material>

   <link name="base_link"/>

   <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

   <link name="chassis">
      <visual>
        <geometry>
          <cylinder radius="0.17" length="0.135"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.17" length="0.135"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia m="4" r="0.17" l="0.135" o_xyz="0 0 0" o_rpy="0 0 0" />
   </link>

   <joint name="chassis_joint" type="fixed">
       <parent link="base_link"/>
       <child link="chassis"/>
       <origin xyz="0 0 0.081" rpy="0 0 0"/>
   </joint>

   <link name="right_wheel">
      <visual>
         <geometry>
           <cylinder radius="0.033" length="0.015"/>
         </geometry>
         <origin xyz="0 0 0" rpy="1.57 0 0"/>
         <material name="gray"/>
      </visual>
      <collision>
         <geometry>
           <cylinder radius="0.033" length="0.015"/>
         </geometry>
         <origin xyz="0 0 0" rpy="1.57 0 0"/>
      </collision>
      <xacro:cylinder_inertia m="0.2" r="0.033" l="0.015" o_xyz="0 0 0" o_rpy="1.57 0 0" />
   </link>

   <joint name="right_wheel_joint" type="continuous">
      <parent link="chassis"/>
      <child link="right_wheel"/>
      <origin xyz="0 -0.115 -0.017" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
   </joint>

   <link name="left_wheel">
      <visual>
         <geometry>
           <cylinder radius="0.033" length="0.015"/>
         </geometry>
         <origin xyz="0 0 0" rpy="1.57 0 0"/>
         <material name="gray"/>
      </visual>
      <collision>
         <geometry>
           <cylinder radius="0.033" length="0.015"/>
         </geometry>
         <origin xyz="0 0 0" rpy="1.57 0 0"/>
      </collision>
      <xacro:cylinder_inertia m="0.2" r="0.033" l="0.015" o_xyz="0 0 0" o_rpy="1.57 0 0" />
   </link>

   <joint name="left_wheel_joint" type="continuous">
      <parent link="chassis"/>
      <child link="left_wheel"/>
      <origin xyz="0 0.115 -0.017" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
   </joint>

   <link name="caster_wheel">
      <visual>
         <geometry>
           <sphere radius="0.033"/>
         </geometry>
         <origin xyz="0 0 0" rpy="0 0 0"/>
         <material name="gray"/>
      </visual>
      <collision>
         <geometry>
           <sphere radius="0.033"/>
         </geometry>
         <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:sphere_inertia m="0.2" r="0.033" o_xyz="0 0 0" o_rpy="0 0 0" />
   </link>

   <joint name="caster_wheel_joint" type="fixed">
       <parent link="chassis"/>
       <child link="caster_wheel"/>
       <origin xyz="0.12 0 -0.017" rpy="0 0 0"/>
   </joint>

</robot>